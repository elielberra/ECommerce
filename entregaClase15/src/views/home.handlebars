<div id="page-container">
  <div id="discount-banner-container">
    <button onclick="refreshPromo()">Get a new discount!</button>
    <div id="discount-banner" class="uk-card uk-card-default uk-width-1-1">
      <div id="discount-product-information">
        <span id="title"></span>
        <span id="sale"></span>
      </div>
    </div>
  </div>
  <div id="products">
    {{#each products}}
      <div>
        <div>
          <div>
            <img alt="Photo of the product" />
          </div>
          <div>
            <h3>{{this.title}}</h3>
            <h5>u$D {{this.price}}</h5>
            {{#each this.keywords}}
              <span>{{this}}</span>
            {{/each}}
            <p>{{this.description}}</p>
            <button onclick="addToCart({{this.id}})">Add to Cart</button>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>